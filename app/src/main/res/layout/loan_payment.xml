<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pagos_prestamos"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <!-- Minimum Payment -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/rbPagoMinimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pago_minimo"/>

        <TextView
            android:id="@+id/tvMontoMinimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_390_000"
            android:textSize="18sp"/>
    </RadioGroup>

    <!-- Total Payment Option -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/rbPagoTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pago_total"/>

        <TextView
            android:id="@+id/tvMontoTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_5_500_000"
            android:textSize="18sp"/>
    </RadioGroup>

    <!-- Payment Methods Buttons -->
    <Button
        android:id="@+id/btnPSE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/pago_por_pse"/>

    <Button
        android:id="@+id/btnTarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/pago_con_tarjeta"/>

</LinearLayout>